<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="PostTextView" parent="AppTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/nsp_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/ndp_5</item>
    </style>

    <style name="DetailTextView" parent="AppTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/nsp_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/ndp_10</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="PostEdittext">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/nsp_15</item>
        <item name="android:paddingHorizontal">@dimen/ndp_10</item>
        <item name="android:layout_height">@dimen/ndp_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_admin_edittext</item>
        <item name="android:layout_marginVertical">@dimen/ndp_5</item>
    </style>

    <style name="AdminOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/ndp_8</item>
        <item name="android:layout_marginTop">@dimen/ndp_20</item>
        <item name="android:paddingTop">@dimen/ndp_20</item>
        <item name="android:paddingBottom">@dimen/ndp_10</item>
        <item name="android:background">@drawable/background_admin_option</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AddButton">
        <item name="android:layout_width">@dimen/ndp_50</item>
        <item name="android:layout_height">@dimen/ndp_50</item>
        <item name="android:background">@drawable/background_button_add</item>
        <item name="android:layout_marginBottom">@dimen/ndp_40</item>
        <item name="android:layout_marginEnd">@dimen/ndp_40</item>
    </style>

    <style name="AppButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/nsp_15</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>