<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HistoryVideoKotlin" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationView"></style>

    <style name="BottomMenuTextItemActive"></style>

    <style name="BottomMenuTextItemInActive"></style>

    <style name="PostTabTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/nsp_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VideoTabSelectedTextAppearance">
        <item name="android:textColor">@color/app2</item>
        <item name="android:textSize">@dimen/nsp_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextResult2">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/nsp_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/ndp_10</item>
        <item name="android:layout_marginEnd">@dimen/ndp_10</item>
    </style>

    <style name="TextResult">
        <item name="android:textSize">@dimen/nsp_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/ndp_20</item>
        <item name="android:layout_marginStart">@dimen/ndp_30</item>
    </style>

    <style name="QuizButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/nsp_20</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@drawable/background_button</item>
    </style>

    <style name="Theme.HistoryVideoKotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HistoryVideoKotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HistoryVideoKotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="QuizAnswer">
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/ndp_5</item>
        <item name="android:paddingStart">@dimen/ndp_10</item>
        <item name="android:textSize">@dimen/nsp_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">@dimen/ndp_30</item>
        <item name="android:maxHeight">@dimen/ndp_30</item>
        <item name="android:minWidth">@dimen/ndp_30</item>
        <item name="android:maxWidth">@dimen/ndp_30</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>