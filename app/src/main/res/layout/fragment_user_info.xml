<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/ndp_20"
                tools:context=".fragments.UserInfoFragment">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Thông tin cá nhân"
                    android:textSize="@dimen/ndp_25"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên:"
                    android:textSize="@dimen/nsp_20"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ndp_50"
                    android:layout_marginBottom="@dimen/ndp_10"
                    android:background="@drawable/background_user_info"
                    android:drawableLeft="@drawable/user_name"
                    android:drawablePadding="@dimen/ndp_20"
                    android:paddingStart="@dimen/ndp_15"
                    android:text="chung"
                    android:textSize="@dimen/nsp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh: "
                    android:textSize="@dimen/nsp_20"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ndp_50"
                    android:layout_marginBottom="@dimen/ndp_10"
                    android:background="@drawable/background_user_info"
                    android:drawableLeft="@drawable/user_birthday"
                    android:drawablePadding="@dimen/ndp_20"
                    android:hint="Nhập ngày sinh"
                    android:paddingStart="@dimen/ndp_15"
                    android:text=""
                    android:textSize="@dimen/nsp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="@dimen/nsp_20"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ndp_50"
                    android:layout_marginBottom="@dimen/ndp_10"
                    android:background="@drawable/background_user_info"
                    android:drawableLeft="@drawable/user_email"
                    android:drawablePadding="@dimen/ndp_20"
                    android:hint="Nhập email"
                    android:paddingStart="@dimen/ndp_15"
                    android:text=""
                    android:textSize="@dimen/nsp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại: "
                    android:textSize="@dimen/nsp_20"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ndp_50"
                    android:layout_marginBottom="@dimen/ndp_10"
                    android:background="@drawable/background_user_info"
                    android:drawableLeft="@drawable/user_telephone"
                    android:drawablePadding="@dimen/ndp_20"
                    android:hint="Nhập số điện thoại"
                    android:paddingStart="@dimen/ndp_15"
                    android:text=""
                    android:textSize="@dimen/nsp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ : "
                    android:textSize="@dimen/nsp_20"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ndp_50"
                    android:layout_marginBottom="@dimen/ndp_10"
                    android:background="@drawable/background_user_info"
                    android:drawableLeft="@drawable/user_address"
                    android:drawablePadding="@dimen/ndp_20"
                    android:hint="Nhập địa chỉ"
                    android:paddingStart="@dimen/ndp_15"
                    android:text=""
                    android:textSize="@dimen/nsp_20" />

            </LinearLayout>

        </ScrollView>
    </FrameLayout>

</layout>
