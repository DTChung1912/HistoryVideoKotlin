<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/app2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/ndp_5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/museum" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/ndp_10"
            android:layout_toRightOf="@id/ivAppIcon"
            android:gravity="center"
            android:text="Trang chu"
            android:textColor="@color/white"
            android:textSize="@dimen/nsp_20"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="@dimen/ndp_40"
            android:layout_height="@dimen/ndp_40"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/ndp_10"
            android:layout_toLeftOf="@id/ivMenu"
            android:scaleType="centerCrop"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="@dimen/ndp_40"
            android:layout_height="@dimen/ndp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/ndp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu" />

    </RelativeLayout>


</FrameLayout>