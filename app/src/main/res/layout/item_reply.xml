<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="reply"
            type="com.example.historyvideokotlin.model.Reply" />

        <variable
            name="isLike"
            type="Boolean" />

        <variable
            name="isDislike"
            type="Boolean" />
    </data>

    <RelativeLayout
        android:id="@+id/itemReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/ndp_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civUserAvatar"
            imageUrl="@{reply.user_image}"
            android:layout_width="@dimen/ndp_30"
            android:layout_height="@dimen/ndp_30"
            android:layout_marginStart="@dimen/ndp_10"
            android:src="@drawable/ic_avatar" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ndp_10"
            android:layout_toRightOf="@id/civUserAvatar"
            android:text="@{reply.user_name}"
            android:textSize="@dimen/nsp_15"
            android:textStyle="bold"
            tools:text="Chung" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUserName"
            android:layout_marginStart="@dimen/ndp_10"
            android:layout_marginTop="@dimen/ndp_5"
            android:layout_toRightOf="@id/civUserAvatar"
            android:text="@{reply.content}"
            android:textSize="@dimen/nsp_10"
            tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />

        <TextView
            android:id="@+id/tvDateSubmitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ndp_20"
            android:layout_marginTop="@dimen/ndp_5"
            android:layout_toRightOf="@id/tvUserName"
            android:text="@{reply.date_submitted}"
            android:textSize="@dimen/nsp_10"
            tools:text="1 ngay truoc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContent"
            android:layout_marginTop="@dimen/ndp_10"
            android:layout_toRightOf="@id/civUserAvatar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLike"
                isVisible="@{!isLike}"
                android:layout_width="@dimen/ndp_20"
                android:layout_height="@dimen/ndp_20"
                android:layout_marginStart="@dimen/ndp_10"
                android:scaleType="fitXY"
                android:src="@drawable/ic_like"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivLiked"
                isVisible="@{isLike}"
                android:layout_width="@dimen/ndp_20"
                android:layout_height="@dimen/ndp_20"
                android:layout_marginStart="@dimen/ndp_10"
                android:scaleType="fitXY"
                android:src="@drawable/ic_liked"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ndp_5"
                android:gravity="center"
                android:text="@{@string/count(reply.like_count)}"
                tools:text="10" />

            <ImageView
                android:id="@+id/ivDislike"
                isVisible="@{!isDislike}"
                android:layout_width="@dimen/ndp_20"
                android:layout_height="@dimen/ndp_20"
                android:layout_marginStart="@dimen/ndp_30"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dislike"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivDisliked"
                isVisible="@{isDislike}"
                android:layout_width="@dimen/ndp_20"
                android:layout_height="@dimen/ndp_20"
                android:layout_marginStart="@dimen/ndp_30"
                android:scaleType="fitXY"
                android:src="@drawable/ic_disliked"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvDislikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ndp_5"
                android:gravity="center"
                android:text="@{@string/count(reply.dislike_count)}"
                tools:text="10" />
        </LinearLayout>
    </RelativeLayout>
</layout>
