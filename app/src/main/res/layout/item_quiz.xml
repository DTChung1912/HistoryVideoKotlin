<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#751F04">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ndp_10"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuizTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ndp_10"
        android:layout_marginBottom="@dimen/ndp_10"
        android:background="@drawable/background_quiz_time"
        android:paddingHorizontal="@dimen/ndp_10"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="@dimen/nsp_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ivLifeCount"
        android:layout_width="@dimen/ndp_48"
        android:layout_height="@dimen/ndp_48"
        android:layout_marginTop="@dimen/ndp_5"
        android:layout_marginEnd="@dimen/ndp_10"
        android:background="@drawable/heart_life"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="@dimen/nsp_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:paddingBottom="@dimen/ndp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivImageQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/ndp_60"
                android:scaleType="fitXY"
                android:src="@drawable/history_quiz_image" />

            <TextView
                android:id="@+id/tvQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/ndp_30"
                android:layout_marginVertical="@dimen/ndp_10"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="@color/white"
                android:textSize="@dimen/nsp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAnswerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/ndp_10"
                android:layout_marginTop="@dimen/ndp_10"
                android:background="@drawable/background_answer"
                android:paddingVertical="@dimen/ndp_5"
                android:paddingStart="@dimen/ndp_10"
                android:text="A. aaaaaaaaaaaaaaaa"
                android:textColor="@color/black"
                android:textSize="@dimen/nsp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAnswerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/ndp_10"
                android:layout_marginTop="@dimen/ndp_10"
                android:background="@drawable/background_answer"
                android:paddingVertical="@dimen/ndp_5"
                android:paddingStart="@dimen/ndp_10"
                android:text="B. aaaaaaaaaaaaaaaa"
                android:textColor="@color/black"
                android:textSize="@dimen/nsp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAnswerC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/ndp_10"
                android:layout_marginTop="@dimen/ndp_10"
                android:background="@drawable/background_answer"
                android:paddingVertical="@dimen/ndp_5"
                android:paddingStart="@dimen/ndp_10"
                android:text="C. aaaaaaaaaaaaaaaa"
                android:textColor="@color/black"
                android:textSize="@dimen/nsp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAnswerD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/ndp_10"
                android:layout_marginTop="@dimen/ndp_10"
                android:background="@drawable/background_answer"
                android:paddingVertical="@dimen/ndp_5"
                android:paddingStart="@dimen/ndp_10"
                android:text="D. aaaaaaaaaaaaaaaa"
                android:textColor="@color/black"
                android:textSize="@dimen/nsp_20"
                android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_marginTop="@dimen/ndp_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn5050"
                            android:layout_width="@dimen/ndp_120"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/ndp_30"
                            android:background="@drawable/background_button"
                            android:text="50:50" />

                        <Button
                            android:id="@+id/btn30s"
                            android:layout_width="@dimen/ndp_120"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/ndp_30"
                            android:background="@drawable/background_button"
                            android:text="+30s" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnComplete"
                            android:layout_below="@id/btn5050"
                            android:layout_marginTop="@dimen/ndp_10"
                            android:layout_marginHorizontal="@dimen/ndp_30"
                            android:background="@drawable/background_button"
                            android:text="Hoan thanh"
                            android:textStyle="bold"
                            />
                    </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>