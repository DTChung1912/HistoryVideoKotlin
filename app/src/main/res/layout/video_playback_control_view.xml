<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="@dimen/ndp_40">

    <TextView
        android:id="@+id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ndp_12"
        android:textColor="@color/white"
        android:textSize="@dimen/nsp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/exo_progress_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/exo_progress_placeholder"
        tools:text="34:56" />

    <View
        android:id="@id/exo_progress_placeholder"
        android:layout_width="0dp"
        android:layout_height="@dimen/ndp_26"
        android:layout_marginHorizontal="@dimen/ndp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.exoplayer2.ui.DefaultTimeBar
        android:id="@+id/exo_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ndp_16"
        android:layout_marginHorizontal="@dimen/ndp_20"
        app:bar_height="@dimen/ndp_2"
        app:layout_constraintBottom_toBottomOf="@+id/exo_progress_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/exo_progress_placeholder"
        app:layout_constraintStart_toStartOf="@+id/exo_progress_placeholder"
        app:layout_constraintTop_toTopOf="@+id/exo_progress_placeholder"
        app:played_color="@color/yellow"
        app:scrubber_color="@color/white"
        app:unplayed_color="@color/gray" />

    <TextView
        android:id="@+id/exo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ndp_12"
        android:textColor="@color/white"
        android:textSize="@dimen/nsp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/exo_progress_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/exo_progress_placeholder"
        tools:text="-23:45" />
</androidx.constraintlayout.widget.ConstraintLayout>