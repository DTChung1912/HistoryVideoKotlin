<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.historyvideokotlin.viewmodels.CameraViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".fragments.CameraFragment">

        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:keepScreenOn="true"
            app:cameraAudio="off"
            app:cameraAutoFocusMarker="@string/cameraview_default_autofocus_marker"
            app:cameraEngine="camera1"
            app:cameraExperimental="true"
            app:cameraFacing="back"
            app:cameraFlash="off"
            app:cameraGestureLongTap="none"
            app:cameraGesturePinch="zoom"
            app:cameraGestureScrollHorizontal="none"
            app:cameraGestureScrollVertical="none"
            app:cameraGestureTap="none"
            app:cameraGrid="off"
            app:cameraMode="picture"
            app:cameraPlaySounds="false"
            app:cameraPreview="texture"
            app:cameraUseDeviceOrientation="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageCapture"
            android:layout_width="@dimen/ndp_80"
            android:layout_height="@dimen/ndp_80"
            android:layout_marginBottom="@dimen/ndp_43"
            android:background="@drawable/ic_capture"
            android:elevation="@dimen/ndp_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagePreview"
            android:layout_width="@dimen/ndp_55"
            android:layout_height="@dimen/ndp_55"
            android:layout_marginEnd="@dimen/ndp_16"
            android:background="@drawable/ic_no_image_in_gallery"
            android:elevation="@dimen/ndp_4"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/ndp_2"
            app:layout_constraintBottom_toBottomOf="@id/imageCapture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageCapture" />

        <View
            android:id="@+id/viewBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:elevation="@dimen/ndp_2"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ndp_16"
            android:layout_marginTop="@dimen/ndp_13"
            android:layout_marginEnd="@dimen/ndp_16"
            android:elevation="@dimen/ndp_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageClose"
                android:layout_width="@dimen/ndp_40"
                android:layout_height="@dimen/ndp_40"
                android:elevation="@dimen/ndp_4"
                android:padding="@dimen/ndp_8"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_close_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageFlash"
                android:layout_width="@dimen/ndp_40"
                android:layout_height="@dimen/ndp_40"
                android:elevation="@dimen/ndp_4"
                android:padding="@dimen/ndp_8"
                android:scaleType="centerCrop"
                android:src="@{viewModel.liveDataIsEnableTorch ? @drawable/ic_flash : @drawable/ic_flash_off}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageRotate"
                android:layout_width="@dimen/ndp_40"
                android:layout_height="@dimen/ndp_40"
                android:elevation="@dimen/ndp_4"
                android:padding="@dimen/ndp_8"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_rotate_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
