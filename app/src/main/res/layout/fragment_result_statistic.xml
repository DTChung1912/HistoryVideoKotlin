<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ResultStatisticFragment">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/ndp_30"
            android:layout_height="@dimen/ndp_30"
            android:layout_marginTop="@dimen/ndp_25"
            android:src="@drawable/ic_back_black"
            app:layout_constraintEnd_toStartOf="@id/tvResuletTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResuletTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ndp_10"
            android:text="Thống kê kết quả"
            android:textSize="@dimen/nsp_40"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="@dimen/ndp_300"
            android:layout_height="@dimen/ndp_300"
            android:layout_marginTop="@dimen/ndp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvResuletTitle" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/ndp_30"
            android:layout_marginStart="@dimen/ndp_10"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pieChart">

            <View
                android:layout_width="@dimen/ndp_25"
                android:layout_height="@dimen/ndp_25"
                android:background="@color/green" />

            <TextView
                style="@style/TextResult2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu đúng" />

            <View
                android:layout_width="@dimen/ndp_25"
                android:layout_height="@dimen/ndp_25"
                android:background="@color/red" />

            <TextView
                style="@style/TextResult2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu sai" />

            <View
                android:layout_width="@dimen/ndp_25"
                android:layout_height="@dimen/ndp_25"
                android:background="@color/yellow" />

            <TextView
                style="@style/TextResult2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu chưa trả lời" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/ndp_10"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu Đúng:" />

                <TextView

                    style="@style/TextResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ndp_30"
                    android:text="Câu Sai:" />

                <TextView
                    style="@style/TextResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ndp_30"
                    android:text="Câu chưa trả lời:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCorrectAnwser"
                    style="@style/TextResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Câu" />

                <TextView
                    android:id="@+id/tvIncorrectAnswer"
                    style="@style/TextResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Câu" />

                <TextView
                    android:id="@+id/tvNotAnsweredCount"
                    style="@style/TextResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Câu" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ndp_30"
            android:layout_marginBottom="@dimen/ndp_30"
            android:background="@drawable/background_button_result"
            android:paddingHorizontal="@dimen/ndp_15"
            android:text="Làm lại"
            android:textSize="@dimen/nsp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llResult" />

        <Button
            android:id="@+id/btnWatchAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ndp_30"
            android:layout_marginBottom="@dimen/ndp_30"
            android:background="@drawable/background_button_result"
            android:paddingHorizontal="@dimen/ndp_15"
            android:text="Xem Đáp Án"
            android:textSize="@dimen/nsp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llResult" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
