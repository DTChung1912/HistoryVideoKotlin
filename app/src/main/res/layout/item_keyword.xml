<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="keyword"
            type="String" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/ndp_10">

        <ImageView
            android:id="@+id/ivPaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/ndp_10"
            android:src="@drawable/ic_paste" />

        <TextView
            android:id="@+id/tvKeyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/ndp_15"
            android:layout_toLeftOf="@id/ivDelete"
            android:layout_toRightOf="@id/ivPaste"
            android:text="@{keyword}"
            android:textColor="@color/black"
            android:textSize="@dimen/nsp_15"
            tools:text="chung" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ndp_10"
            android:src="@drawable/ic_cancel" />
    </RelativeLayout>
</layout>
