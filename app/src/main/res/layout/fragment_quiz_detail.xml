<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="@dimen/ndp_5"
                android:layout_marginVertical="@dimen/ndp_5"
                android:background="@drawable/background_quiz_toolbar"
                android:gravity="top"
                android:paddingHorizontal="@dimen/ndp_5">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_back_white" />

                <TextView
                    android:id="@+id/tvQuizTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/ndp_10"
                    android:layout_marginBottom="@dimen/ndp_10"
                    android:background="@drawable/background_quiz_time"
                    android:drawableLeft="@drawable/ic_lock_clock"
                    android:drawablePadding="@dimen/ndp_5"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/ndp_10"
                    android:text="00:00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/nsp_20"
                    android:textStyle="bold" />

            </RelativeLayout>

        </FrameLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@id/rlButton"
            android:layout_below="@id/rlToolbar" />

        <RelativeLayout
            android:id="@+id/rlButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomParent"
            android:gravity="bottom|center_horizontal"
            android:paddingVertical="@dimen/ndp_10">

            <Button
                android:id="@+id/btn5050"
                style="@style/QuizButton"
                android:layout_width="@dimen/ndp_140"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ndp_30"
                android:background="@drawable/background_button"
                android:text="50:50" />

            <Button
                android:id="@+id/btn30s"
                style="@style/QuizButton"
                android:layout_width="@dimen/ndp_140"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/ndp_30"
                android:background="@drawable/background_button"
                android:text="+30s" />

            <Button
                android:id="@+id/btnPrev"
                style="@style/QuizButton"
                android:layout_width="@dimen/ndp_140"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn5050"
                android:layout_marginStart="@dimen/ndp_30"
                android:layout_marginTop="@dimen/ndp_10"
                android:background="@drawable/background_button"
                android:text="Trước" />

            <Button
                android:id="@+id/btnNext"
                style="@style/QuizButton"
                android:layout_width="@dimen/ndp_140"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn30s"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/ndp_10"
                android:layout_marginEnd="@dimen/ndp_30"
                android:background="@drawable/background_button"
                android:text="Sau" />

            <Button
                android:id="@+id/btnComplete"
                style="@style/QuizButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnPrev"
                android:layout_marginHorizontal="@dimen/ndp_30"
                android:layout_marginTop="@dimen/ndp_10"
                android:background="@drawable/background_button"
                android:text="Hoàn Thành"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/bottomParent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ndp_70"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-1dp" />

    </RelativeLayout>

</layout>