<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.historyvideokotlin.viewmodels.SearchPostViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.SearchPostFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_black" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/ndp_10"
                android:layout_marginVertical="@dimen/ndp_10"
                android:background="@drawable/background_edittext_search"
                android:drawableEnd="@drawable/ic_search_black_24dp"
                android:hint="Nhập từ khóa tìm kiếm"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingHorizontal="@dimen/ndp_15"
                android:paddingVertical="@dimen/ndp_10" />
        </LinearLayout>

        <TextView
            isVisible="@{!viewModel.isSearch}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/ndp_5"
            android:layout_marginStart="@dimen/ndp_10"
            android:text="@{@string/search(viewModel.keyword)}"
            android:textSize="@dimen/nsp_15"
            tools:text="Kết quả cho 'chung'"
            tools:visibility="gone" />

        <TextView
            isVisible="@{viewModel.isSearch}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/ndp_5"
            android:layout_marginStart="@dimen/ndp_10"
            android:text="Từ khóa tìm kiếm"
            android:textSize="@dimen/nsp_20"
            android:textStyle="bold"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSearchPost"
            isVisible="@{!viewModel.isSearch}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_post_list"
            tools:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerKeyword"
            isVisible="@{viewModel.isSearch}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_keyword"
            tools:visibility="visible" />
    </LinearLayout>
</layout>
